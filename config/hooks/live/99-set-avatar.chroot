#!/bin/bash

USERNAME="users"
AVATAR="/usr/share/images/$USERNAME.png"
AVATAR_DIR="/var/lib/AccountsService/icons"
ACCOUNT_DIR="/var/lib/AccountsService/users"

mkdir -p "$AVATAR_DIR"
mkdir -p "$ACCOUNT_DIR"

if [ -f "$AVATAR" ]; then
  cp "$AVATAR" "$AVATAR_DIR/$USERNAME"

  cat > "$ACCOUNT_DIR/$USERNAME" <<EOF
[User]
Icon=$AVATAR_DIR/$USERNAME
SystemAccount=false
EOF
fi
