#!/bin/bash

for u in debian user live; do
    deluser --remove-home --quiet --force-badname "$u" 2>/dev/null || true
done

useradd -m -s /bin/bash -c "DevOS User" devos
echo "devos:devos" | chpasswd

usermod -aG sudo,adm,audio,video,netdev,plugdev devos

mkdir -p /home/devos/.config/dconf
cp /etc/skel/.config/dconf/user /home/devos/.config/dconf/user
chown -R devos:devos /home/devos/.config
